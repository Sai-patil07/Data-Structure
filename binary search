#include<iostream>
using namespace std;
int main(){
    int i ,n,ele;

    cout<<"enter size of array:";
    cin>>n;
    int a[n];
    
    cout<<"enter array elements:";
    for(i=0;i<n;i++){
        cin>>a[i];
    }
    
    cout<<endl<<"enter searching element:";
    cin>>ele;
    
    int low = 0, upper = n - 1;
    
    
    while(low <= upper){
        int mid = (low + upper) / 2;
        
        if(a[mid] == ele){
            cout<<"element is found at position"<<mid<<endl;
            return 0;
            break;
        }
        else if(a[mid] < ele){
            low = mid + 1;
        }
        else{
            upper = mid - 1;
        }
    }
    
    cout<<"element is not found"<<endl;
    
    return 0;
}
